<div class="papaDiv">
<form class='searchForm' action="/results" method="GET">
  <label class='searchLabel' for="searchBox">Search for a constellation: </label>
  <br>
  <input type="text" name="search" id="searchBox">
  <input class='submitBtn' type="submit" value="Go!">
  
</form>
<button id="suggestionsBtn" class="btn">Discover</button>


  <div id="homeImgDiv">
    <img class="campingImg" src="../static/camping-home.jpg" alt="campsite">
  </div>

  <img id='resultImg' src="<%= stars.collection.items[0].links[0].href %>" alt="<%= stars.collection.items[0].data[0].title %>">
  <p class='titleP'><%= stars.collection.items[0].data[0].title %></p>
  <a id="detailsLink" href="/results/<%= stars.collection.items[0].data[0].nasa_id %>">Woah, tell me more!</a>
 
  <div class="favsDiv">
  <form method="POST" action="/favorites">
    <% if (currentUser) { %>
      <input hidden type="text" name="photo" value="<%= stars.collection.items[0].links[0].href %>">
      <input hidden type="text" name="name" value="<%= stars.collection.items[0].data[0].title %>">
      <input hidden type="text" name="description" value="<%= stars.collection.items[0].data[0].description %>">
      <input hidden type="text" name="userID" value="<%= user.id %>">
      <button id='favBtn' class="btn" type="submit">❤︎</button>
      <% } else { %>
       
    <% } %>
      
  </form>
  
</div>



